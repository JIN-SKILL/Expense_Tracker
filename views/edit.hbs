<form action="/item/{{ item._id }}?_method=PUT" method="POST" style="width: 400px;">
  <div class="row">
    <div class="col-4 pt-1 my-4">*必填欄位</div><div class="col-8 my-4 fs-2 text-center">請輸入你的支出</div>
    <div class="col-4 pt-1 my-4 fs-2">名稱*：</div><div class="col-8 my-4"><input class="form-control border-dark border-2 fs-2 rounded-0" type="text" name="name" value="{{ item.name }}"></div>
    <div class="col-4 pt-1 my-4 fs-2">日期*：</div><div class="col-8 my-4"><input id="date" class="form-control border-dark border-2 fs-3 rounded-0" type="date" name="date"></div>
    <div class="col-4 pt-1 my-4 fs-2">類別*：</div><div class="col-8 my-4">
      <select name="category" class="form-select form-select-lg border-dark border-2 fs-2 rounded-0" aria-label=".form-select-lg example">
        <option value="{{ item.category }},{{ item.icon }}" selected>{{ item.category }}</option>
        {{#each category}}
        <option value="{{ this.name }},{{ this.icon }}">{{ this.name }}</option>
        {{/each}}
      </select>
    </div>
    <div class="col-4 pt-1 my-4 fs-2">金額*：</div><div class="col-8 my-4"><input class="form-control border-dark border-2 fs-2 rounded-0" type="text" name="amount" value="{{ item.amount }}"></div>
    <div class="d-flex justify-content-end"><button type="submit" class="btn my-4 px-5 border-dark border-2 fs-2" style="width: 260px;">送出</button></div>
  </div>
</form>

<script>
  window.onload=changeDate
  function changeDate() {
    let date = '{{ item.date }}'
    date = date.replace(/\//g, '-')
    document.querySelector('#date').setAttribute('value', date);
  }
</script>
